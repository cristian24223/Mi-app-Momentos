<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2723"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_marginVertical="80dp"
        android:layout_marginTop="20dp"
        android:background="#43A7"
        app:srcCompat="@drawable/logotipo"/>

    <EditText android:id="@+id/idUsuario"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Usuario"
        android:textStyle="bold"/>


    <EditText android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="contraseÃ±a"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Iniciar Sesion"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/botton_ronded"
        android:onClick="evento"/>

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Registrarse"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:background="@drawable/botton_ronded"
        android:onClick="evento2"/>

    <TextView
        android:id="@+id/idNombre"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Bienvenido:"
        android:textStyle="bold"/>
